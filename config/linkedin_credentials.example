# ============================================
# LinkedIn Scraper - Configuration d'exemple
# ============================================
# Copiez ce fichier vers kafka/producers/.env.linkedin et remplissez avec vos vraies credentials
# ATTENTION: N'ajoutez jamais .env.linkedin au git!

# Credentials LinkedIn (requis pour le scraping)
LINKEDIN_EMAIL=votre_email@exemple.com
LINKEDIN_PASSWORD=votre_mot_de_passe

# Configuration Selenium
SELENIUM_HEADLESS=true

# Enrichissement des détails (lent mais plus de données)
LINKEDIN_ENRICH_DETAILS=false

# Limites de sécurité
LINKEDIN_MAX_JOBS_PER_RUN=50
LINKEDIN_SCROLL_MAX_ATTEMPTS=10

# Délais anti-ban (secondes)
LINKEDIN_LOGIN_DELAY=3
LINKEDIN_SEARCH_DELAY=2
LINKEDIN_SCROLL_DELAY=2
